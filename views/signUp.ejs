<h1><%=title%></h1>
<form action="/users/create" method="POST">
    <input type="name" placeholder="Your name" name="name" required><br><br>
    <input type="email" placeholder="Your email" name="email" required><br><br>
    <input type="password" placeholder="Password" name="password" required><br><br>
    <input type="password" placeholder="Confirm password" name="confirm_password" required><br><br>
    <button type="submit">Sign Up</button>
</form>
